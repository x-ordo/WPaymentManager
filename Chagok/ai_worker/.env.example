# LEH AI Worker - Environment Variables Example
# Copy this file to .env and fill in your values
#
# NOTE: This should be a symlink to the root .env file in production
# See docs/ENVIRONMENT.md for details

# ============================================
# AWS Configuration
# ============================================

# S3 Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_EVIDENCE_BUCKET=leh-evidence-dev
S3_DOWNLOAD_TMP_PATH=/tmp

# DynamoDB Configuration (unified with Backend)
DDB_EVIDENCE_TABLE=leh_evidence_dev
DDB_CASE_SUMMARY_TABLE=leh_case_summary_dev

# ============================================
# Qdrant Configuration
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_PREFIX=case_rag_
QDRANT_COLLECTION=leh_evidence
QDRANT_VECTOR_SIZE=1536

# ============================================
# OpenAI API Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_GPT_MODEL=gpt-4o-mini
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
LLM_REQUEST_TIMEOUT_SECONDS=60

# ============================================
# AI Pipeline Configuration
# ============================================

# Parser Settings
MAX_FILE_SIZE_MB=100
ENABLE_IMAGE_VISION=true
ENABLE_IMAGE_OCR=false

# Analysis Settings
ENABLE_ARTICLE_840_TAGGING=true
ENABLE_EVIDENCE_SUMMARIZATION=true
ENABLE_RISK_ANALYSIS=false

# Vector Store Settings
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# ============================================
# External APIs (Optional)
# ============================================
LAW_API_MEMBER_ID=                          # 국가법령정보센터 API Member ID

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
ENABLE_CLOUDWATCH_LOGS=true
ENABLE_METRICS=true

# Sentry (Optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# Development & Testing
# ============================================
ENVIRONMENT=dev
PYTEST_MOCK_S3=true
PYTEST_MOCK_QDRANT=true
