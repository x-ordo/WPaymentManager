{
  "endpoints": [
    {
      "endpoint": "GET /settings/profile",
      "description": "Get current user's profile settings",
      "authentication": "Bearer JWT (any authenticated user)",
      "response": {
        "200": {
          "display_name": "김변호사",
          "email": "lawyer@example.com",
          "phone": "010-1234-5678",
          "avatar_url": null,
          "timezone": "Asia/Seoul",
          "language": "ko",
          "role": "lawyer",
          "created_at": "2024-06-01T10:00:00Z"
        }
      }
    },
    {
      "endpoint": "PUT /settings/profile",
      "description": "Update current user's profile settings",
      "authentication": "Bearer JWT",
      "request": {
        "body": {
          "display_name": {
            "type": "string",
            "max_length": 100,
            "optional": true
          },
          "phone": {
            "type": "string",
            "pattern": "^010-\\d{4}-\\d{4}$",
            "optional": true
          },
          "timezone": {
            "type": "string",
            "optional": true
          },
          "language": {
            "type": "string",
            "enum": ["ko", "en"],
            "optional": true
          }
        }
      },
      "response": {
        "200": {
          "message": "프로필이 업데이트되었습니다.",
          "profile": {
            "display_name": "김변호사",
            "email": "lawyer@example.com",
            "phone": "010-1234-5678",
            "timezone": "Asia/Seoul",
            "language": "ko"
          }
        },
        "400": {
          "detail": "잘못된 입력입니다."
        }
      }
    },
    {
      "endpoint": "GET /settings/notifications",
      "description": "Get notification preferences",
      "authentication": "Bearer JWT",
      "response": {
        "200": {
          "email_notifications": true,
          "push_notifications": true,
          "notification_frequency": "immediate",
          "notification_types": {
            "new_evidence": true,
            "case_updates": true,
            "messages": true,
            "calendar_reminders": true,
            "billing_alerts": true
          }
        }
      }
    },
    {
      "endpoint": "PUT /settings/notifications",
      "description": "Update notification preferences",
      "authentication": "Bearer JWT",
      "request": {
        "body": {
          "email_notifications": {
            "type": "boolean",
            "optional": true
          },
          "push_notifications": {
            "type": "boolean",
            "optional": true
          },
          "notification_frequency": {
            "type": "string",
            "enum": ["immediate", "daily", "weekly"],
            "optional": true
          },
          "notification_types": {
            "type": "object",
            "optional": true
          }
        }
      },
      "response": {
        "200": {
          "message": "알림 설정이 업데이트되었습니다."
        }
      }
    },
    {
      "endpoint": "GET /settings/security",
      "description": "Get security settings",
      "authentication": "Bearer JWT",
      "response": {
        "200": {
          "two_factor_enabled": false,
          "last_password_change": "2025-06-01T10:00:00Z",
          "active_sessions": 2,
          "login_history": [
            {
              "timestamp": "2025-12-08T08:30:00Z",
              "ip_address": "123.456.789.0",
              "device": "Chrome on macOS",
              "location": "Seoul, KR"
            }
          ]
        }
      }
    },
    {
      "endpoint": "POST /settings/security/change-password",
      "description": "Change user password",
      "authentication": "Bearer JWT",
      "request": {
        "body": {
          "current_password": {
            "type": "string",
            "required": true
          },
          "new_password": {
            "type": "string",
            "min_length": 8,
            "required": true
          }
        }
      },
      "response": {
        "200": {
          "message": "비밀번호가 변경되었습니다."
        },
        "400": {
          "detail": "현재 비밀번호가 일치하지 않습니다."
        }
      }
    }
  ]
}
