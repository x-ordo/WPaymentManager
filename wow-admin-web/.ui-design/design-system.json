{
  "name": "WOW Payment Manager Design System",
  "version": "1.0.0",
  "created": "2026-02-23",
  "philosophy": "Calm Control — grayscale-dominant, high-density, quiet interface for financial operations",
  "preset": "comprehensive",
  "colorModes": ["light"],
  "outputFormats": ["css-custom-properties", "tailwind-v4-theme"],
  "tokens": {
    "colors": {
      "primitive": {
        "gray": {
          "0": "#FFFFFF",
          "50": "#FAFAFA",
          "100": "#F5F5F5",
          "150": "#F0F0F0",
          "200": "#E5E5E5",
          "300": "#D4D4D4",
          "400": "#A3A3A3",
          "500": "#737373",
          "600": "#525252",
          "700": "#404040",
          "800": "#2A2A2A",
          "900": "#1A1A1A",
          "950": "#0F0F0F"
        },
        "blue": {
          "soft": "#3B82F6",
          "muted": "#2563EB"
        },
        "red": {
          "soft": "#DC2626",
          "muted": "#B91C1C"
        },
        "green": {
          "soft": "#16A34A"
        }
      },
      "semantic": {
        "surface": {
          "page": "gray-50",
          "card": "gray-0",
          "header": "gray-150",
          "sidebar": "gray-0",
          "hover": "gray-50",
          "active": "gray-100"
        },
        "ink": {
          "primary": "gray-900",
          "secondary": "gray-700",
          "tertiary": "gray-500",
          "muted": "gray-400",
          "disabled": "gray-300"
        },
        "border": {
          "default": "gray-200",
          "subtle": "gray-100",
          "strong": "gray-300",
          "focus": "gray-900"
        },
        "status": {
          "info": "blue-soft",
          "danger": "red-soft",
          "success": "green-soft"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "sans": "Pretendard, -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif",
        "mono": "JetBrains Mono, SF Mono, ui-monospace, Cascadia Code, monospace"
      },
      "fontSize": {
        "2xs": "0.6875rem",
        "xs": "0.75rem",
        "sm": "0.8125rem",
        "base": "0.875rem",
        "md": "0.9375rem",
        "lg": "1.125rem",
        "xl": "1.5rem",
        "2xl": "2rem",
        "3xl": "2.5rem"
      },
      "fontWeight": {
        "normal": 400,
        "semibold": 600,
        "bold": 700,
        "black": 900
      }
    },
    "spacing": {
      "base": "4px",
      "scale": "linear",
      "values": {
        "0": "0",
        "0.5": "2px",
        "1": "4px",
        "1.5": "6px",
        "2": "8px",
        "3": "12px",
        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px"
      }
    },
    "borderRadius": {
      "none": "0",
      "xs": "2px",
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "full": "9999px"
    },
    "shadows": {
      "xs": "0 1px 2px rgb(0 0 0 / 0.04)",
      "sm": "0 1px 3px rgb(0 0 0 / 0.06), 0 1px 2px rgb(0 0 0 / 0.04)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.06), 0 2px 4px -2px rgb(0 0 0 / 0.04)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.06), 0 4px 6px -4px rgb(0 0 0 / 0.04)"
    }
  },
  "guidelines": {
    "colorUsage": "Grayscale only. Color appears only for status indicators (info=blue, danger=red, success=green). Never decorative.",
    "typography": "All numbers: font-mono + tabular-nums. Korean labels: font-sans semibold. Money amounts: font-mono bold tracking-tighter.",
    "density": "High density. Table row height 40-48px. Compact padding. Maximize visible records.",
    "interaction": "Transitions ≤200ms. No bouncy animations. Subtle hover bg change. Sharp corners preferred.",
    "language": "Korean throughout UI. English only for system identifiers (IDs, codes)."
  }
}
